<% if logged_in? %>
  <div class="container">
    <div class="row bg-light">
      <div class="col-10 offset-sm-1">
        <div class="row">
          <aside class="col-sm-3 mr-0">
            <div class="card">
              <div class="card-header bg-light">
                <h3 class="card-title text-center">Favorites</h3>
              </div>
              <div class="card-body min-vh-100 bg-light">
                <div>
                  <%= link_to 'Create', new_group_path, class: 'btn btn-primary btn-block' %>
                </div>
                <div>
                  <%= render :template => 'users/favoritegroups' %>
                </div>
              </div>
            </div>
          </aside>
          <div class="col-sm-9">
            <%= render 'groups/groups' %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the WithGame</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>