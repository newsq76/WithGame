 <% @groups.each do |group| %>
 <ul class="mt-4 p-0">
    <li class="media border border-secondary rounded bg-white p-2">
      <img class="mr-3 rounded" src="<%= gravatar_url(group.user, { size: 40 }) %>" alt="">
      <div class="media-body">
        <div class="ml-3">
          <%= link_to group.user.name, user_path(group.user) %> 
          <span class="text-muted"><%= group.created_at.to_s(:datetime_jp) %></span>
        </div>
        <div class="pt-2 ml-3">
          <%= link_to group.name, group_path(group), class: 'btn btn-outline-secondary' %>
          <span><%= render 'group_users/join_button', group: group%></span>
          <span>
            <% if current_user == group.user %>
              <span class="mr-2">
                <%= link_to group, class:"btn btn-danger", data: { confirm: 'Groupを削除してもよろしいですか？' }, method: :delete do %>
                  <i class="fas fa-trash-alt"></i>
                <% end %>
              </span> 
            <% end %>
          </span>
        </div>
       </div>
    </li>
  </ul>
  <%= paginate @groups %>
<% end %>